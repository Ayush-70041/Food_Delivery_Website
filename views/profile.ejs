        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #262323;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            color: #fff; /* Default text color */
        }

        .container {
